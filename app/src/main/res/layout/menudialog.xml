<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
                   android:id="@+id/male"
                   android:background="@drawable/cc"
                   android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content"
                   android:id="@+id/female"
                   android:background="@drawable/cann"
                   android:layout_marginLeft="16dp"

                   android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:visibility="gone"
                  android:id="@+id/lin"
                  android:layout_marginTop="40dp"
                  android:orientation="horizontal"
                  android:layout_height="80dp">
        <Button android:layout_width="80dp"
                   android:id="@+id/twn"
                   android:background="@drawable/mintwe"
                   android:layout_height="80dp"/>
        <Button android:layout_width="80dp"
                   android:id="@+id/fou"
                   android:background="@drawable/mingou"
                   android:layout_marginLeft="16dp"
                   android:layout_height="80dp"/>
        <Button android:layout_width="80dp"
                   android:id="@+id/six"
                   android:background="@drawable/minsic"
                   android:layout_marginLeft="16dp"
                   android:layout_height="80dp"/>
    </LinearLayout>
    <View android:background="#000"
          android:layout_marginTop="50dp"
          android:layout_width = "match_parent"
          android:layout_height="1dp"/>
    <Button android:layout_width="60dp"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:id="@+id/can"
            android:layout_gravity="center"
            android:background="@drawable/cc"/>
</LinearLayout>